FROM node:18-alpine

WORKDIR /app

# Instalar nodemon para hot-reload
RUN npm install -g nodemon

# Copiar package.json
COPY package*.json ./

# Instalar dependencias
RUN npm install

# Copiar c√≥digo fuente
COPY . .

# Exponer puerto
EXPOSE 3001

# Comando de inicio con nodemon para hot-reload
CMD ["nodemon", "server.js"]
