# LiveChat Server - Environment Variables
# Copia este archivo a .env y completa los valores

# ========================================
# DATABASE (MongoDB Atlas o Local)
# ========================================
MONGODB_URI=mongodb+srv://usuario:password@cluster0.xxxxx.mongodb.net/livechat?retryWrites=true&w=majority&appName=Cluster0
# O para MongoDB local:
# MONGODB_URI=mongodb://localhost:27017/livechat

# ========================================
# SERVER
# ========================================
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
ENABLE_SSL=false

# ========================================
# SECURITY - JWT
# ========================================
# Generar con: node scripts/generateEncryptionKey.js
JWT_SECRET=

# ========================================
# SECURITY - ENCRYPTION (OBLIGATORIO)
# ========================================
# Generar con: node scripts/generateEncryptionKey.js
# ⚠️ NUNCA commitear estas claves al repositorio
ENCRYPTION_MASTER_KEY=
INTEGRITY_KEY=

# ========================================
# CLOUDINARY (para archivos multimedia)
# ========================================
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_URL=cloudinary://API_KEY:API_SECRET@CLOUD_NAME

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# WORKER THREAD POOL
# ========================================
MIN_WORKERS=2
MAX_WORKERS=8

# ========================================
# FILE SECURITY
# ========================================
MAX_FILE_SIZE=15728640
ENABLE_STEGANOGRAPHY_CHECK=true
STEGANOGRAPHY_CONFIDENCE_THRESHOLD=0.7

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_TO_MONGODB=true

# ========================================
# SESSION
# ========================================
SESSION_SECRET=

# ========================================
# ALLOWED MIME TYPES
# ========================================
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,audio/mpeg,audio/mp3,audio/wav,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/zip

# ========================================
# SSL/TLS (PRODUCCIÓN)
# ========================================
# ENABLE_SSL=true
# SSL_KEY_PATH=/path/to/privkey.pem
# SSL_CERT_PATH=/path/to/fullchain.pem
